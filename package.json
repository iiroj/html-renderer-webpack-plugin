{
  "name": "html-renderer-webpack-plugin",
  "version": "4.0.24",
  "description": "A webpack plugin for rendering static html pages",
  "author": "Iiro JÃ¤ppinen <iiro@jappinen.fi> (https://iiro.fi)",
  "license": "MIT",
  "homepage": "https://github.com/iiroj/html-renderer-webpack-plugin",
  "repository": "github:iiroj/html-renderer-webpack-plugin",
  "bugs": "https://github.com/iiroj/html-renderer-webpack-plugin/issues",
  "main": "dist/HtmlRendererWebpackPlugin.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=6.11.5"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "typecheck": "tsc -p tsconfig.json",
    "test": "jest",
    "prebuild": "rm -rf dist",
    "build": "tsc --build tsconfig.build.json",
    "watch": "npm run build -- --watch",
    "version": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "npm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm test && npm run build"
    }
  },
  "peerDependencies": {
    "webpack": ">=4"
  },
  "dependencies": {
    "@types/webpack-sources": "^0.1.5",
    "chokidar": "^3.0.2",
    "webpack-sources": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.1.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.15",
    "@types/webpack": "^4.4.35",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "commitlint": "^8.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "standard-version": "^6.0.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.35.3"
  },
  "keywords": [
    "babel",
    "html",
    "renderer",
    "static-site",
    "static",
    "template",
    "webpack"
  ]
}
