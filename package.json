{
  "name": "html-renderer-webpack-plugin",
  "version": "5.3.0",
  "description": "A webpack plugin for rendering static html pages",
  "author": "Iiro JÃ¤ppinen <iiro@jappinen.fi> (https://iiro.fi)",
  "license": "MIT",
  "homepage": "https://github.com/iiroj/html-renderer-webpack-plugin",
  "repository": "github:iiroj/html-renderer-webpack-plugin",
  "bugs": "https://github.com/iiroj/html-renderer-webpack-plugin/issues",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.mjs",
    "*.d.ts"
  ],
  "engines": {
    "node": ">=6.11.5"
  },
  "scripts": {
    "lint:base": "eslint --ext .js,.ts",
    "lint": "npm run lint:base -- .",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.test.json --noEmit",
    "test": "jest",
    "prebuild": "rm -rf dist",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "version": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:base --"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm run typecheck && npm test && npm run build"
    }
  },
  "peerDependencies": {
    "webpack": ">=5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.23",
    "@types/memory-fs": "0.3.3",
    "@types/node": "^15.12.5",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "commitlint": "^12.1.4",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "memory-fs": "0.5.0",
    "prettier": "^2.3.2",
    "rollup": "2.52.6",
    "standard-version": "^9.3.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "^5.41.1"
  },
  "keywords": [
    "babel",
    "html",
    "renderer",
    "static-site",
    "static",
    "template",
    "webpack"
  ]
}
