{
  "name": "html-renderer-webpack-plugin",
  "version": "5.1.3",
  "description": "A webpack plugin for rendering static html pages",
  "author": "Iiro JÃ¤ppinen <iiro@jappinen.fi> (https://iiro.fi)",
  "license": "MIT",
  "homepage": "https://github.com/iiroj/html-renderer-webpack-plugin",
  "repository": "github:iiroj/html-renderer-webpack-plugin",
  "bugs": "https://github.com/iiroj/html-renderer-webpack-plugin/issues",
  "main": "dist/HtmlRendererWebpackPlugin.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=6.11.5"
  },
  "scripts": {
    "lint:base": "eslint --ext .js,.ts",
    "lint": "npm run lint:base -- .",
    "typecheck": "tsc -p tsconfig.json",
    "test": "jest",
    "prebuild": "rm -rf dist",
    "build": "tsc --build tsconfig.build.json",
    "watch": "npm run build -- --watch",
    "version": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:base --"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm run typecheck && npm test && npm run build"
    }
  },
  "peerDependencies": {
    "webpack": ">=4"
  },
  "dependencies": {
    "@types/webpack-sources": "^0.1.7",
    "chokidar": "^3.3.1",
    "webpack-sources": "^1.4.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/webpack": "^4.41.10",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.35.3"
  },
  "keywords": [
    "babel",
    "html",
    "renderer",
    "static-site",
    "static",
    "template",
    "webpack"
  ]
}
